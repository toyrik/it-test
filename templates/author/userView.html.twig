{% extends "base.html.twig" %}
{% block title %}Authors{% endblock %}

{% block body %}
    <div>
        <table>
        {% for author in authors %}
            <tr>
                <td>
                    {{ author.fullname }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>
                    
                </td>
            </tr>
        {% endfor %}
        </table>
        <h4>Всего найдено {{ totalCount }}</h4>

        {% if authors|length>0 %}
            <div>
                {{ knp_pagination_render(authors) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
